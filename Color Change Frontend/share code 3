        if snake_gap_counter >= current_gap:
            snakes.append(Snake(start_pos=0))
            snake_gap_counter = 0
            current_gap = random.randint(3, 10)  # âœ… ØªØ¹Ø¯ÙŠÙ„ Ù‡Ù†Ø§
        else:
            snake_gap_counter += 1

