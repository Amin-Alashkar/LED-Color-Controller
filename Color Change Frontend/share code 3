  0% {
    box-shadow: var(--shadow-glow-large) var(--aura-color-1);
  }
  50% {
    box-shadow: var(--shadow-glow-large) var(--aura-color-2);
  }
  100% {
    box-shadow: var(--shadow-glow-large) var(--aura-color-3);
  }
}

