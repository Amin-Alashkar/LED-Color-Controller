async def custom_color_wipe_loop(hex_color: str, delay: float = 0.05):
    """
    Snake Army V2 - Infinite Snakes:
    - Background at half brightness always
    - Snakes (length=10 LEDs) move from start (0) to end (NUM_LEDS-1)
    - Random gap (max 10 LEDs) between snakes
    """

    global stop_requested

    r_base = int(hex_color[1:3], 16)
    g_base = int(hex_color[3:5], 16)
    b_base = int(hex_color[5:7], 16)

    DIM_LEVEL = 100  # نصف السطوع
    BRIGHT_LEVEL = 255  # سطوع الأفعى

    background_color = (
        (r_base * DIM_LEVEL) // 255,
        (g_base * DIM_LEVEL) // 255,
        (b_base * DIM_LEVEL) // 255
    )

    # اضاءة الخلفية أول مرة
    for i in range(NUM_LEDS):
        neo.set_led_color(i, *background_color)
    neo.update_strip()

    class Snake:
        def __init__(self, start_pos):
            self.length = 10
            self.position = start_pos
            self.done = False

        def get_body_indexes(self):
            # الجسم من position ل position + length - 1
            return [i for i in range(self.position, self.position + self.length) if 0 <= i < NUM_LEDS]

        def get_tail(self):
            # نقطة الذيل (أصغر LED في الجسم)
            tail = self.position - 1
            return tail

        def move(self):
            self.position += 1
            if self.position > NUM_LEDS:
                self.done = True

    snakes = []
    snake_gap_counter = 0
    current_gap = random.randint(1, 10)

    while not stop_requested:
        # أضف أفعى جديدة إذا وصلت الفجوة المطلوبة
        if snake_gap_counter >= current_gap:
            snakes.append(Snake(start_pos=0))
            snake_gap_counter = 0
            current_gap = random.randint(1, 10)
        else:
            snake_gap_counter += 1

        # تحديث الأفاعي
        for snake in snakes:
            # رجع الذيل للخلفية نصف السطوع
            tail = snake.get_tail()
            if 0 <= tail < NUM_LEDS:
                neo.set_led_color(tail, *background_color)

            # اضئ جسم الأفعى بلون كامل السطوع
            for i in snake.get_body_indexes():
                neo.set_led_color(i, r_base, g_base, b_base)

            snake.move()

        # حذف الأفاعي اللي خلصت
        snakes = [s for s in snakes if not s.done]

        neo.update_strip()
        await asyncio.sleep(delay)

    neo.clear_strip()
    neo.update_strip()
