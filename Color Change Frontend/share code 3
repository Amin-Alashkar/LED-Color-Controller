.card {
  position: relative;
  width: 90vw;
  max-width: 800px;
  padding: 40px;
  border-radius: 24px;
  background: rgba(20, 30, 50, var(--alpha-med));
  box-shadow: var(--shadow-glow-large) var(--aura-color-1);
  backdrop-filter: blur(20px) brightness(1.2);
  z-index: 10;
  /* overflow: hidden; */
  animation: card-pulse var(--anim-speed-medium) infinite alternate;
}

