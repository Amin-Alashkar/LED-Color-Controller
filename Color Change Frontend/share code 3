/*---------------------------------------
  3. الأشكال (Triangles | Squares | Circles)
---------------------------------------*/
/* شكل عام: يملك وميضاً، حركة انتقالية وصندوق توهج */
.aura-shape {
  position: absolute;
  opacity: 0.0;
  border-radius: 50%; /* سنستخدم دائماً وغير دائري عبر الدمج مع clip-path */
  box-shadow: 0 0 30px rgba(255,255,255,0.2),
              0 0 60px rgba(255,255,255,0.1);
  animation: shape-fade-move var(--anim-speed-ultra) infinite ease-in-out;
}

/* مثلث */
.aura-shape.triangle {
  width: 0;
  height: 0;
  border-left: 60px solid transparent;
  border-right: 60px solid transparent;
  border-bottom: 100px solid rgba(255, 50, 200, 0.15);
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  animation-name: triangle-float;
}

/* مربع */
.aura-shape.square {
  width: 100px;
  height: 100px;
  background: rgba(50, 200, 255, 0.15);
  animation-name: square-drift;
}

/* دائرة */
.aura-shape.circle {
  width: 80px;
  height: 80px;
  background: rgba(150, 255, 50, 0.15);
  border-radius: 50%;
  animation-name: circle-glide;
}

/*---------------------------------------
  4. توليد الأشكال عبر ::before وأعداد كبيرة
---------------------------------------*/
.aura-shape::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: inherit;
  height: inherit;
  background: inherit;
  clip-path: inherit;
  border-radius: inherit;
  box-shadow: inherit;
  animation: inherit;
}

/*---------------------------------------
  5. حركيّة الأشكال (Keyframes)
---------------------------------------*/
/* حركة عامة لظهور شكل، الإنتقال، ثم التلاشي */
@keyframes shape-fade-move {
  0%   { opacity: 0; transform: translate(var(--start-x), var(--start-y)) scale(0.5); }
  10%  { opacity: 0.3; }
  50%  { opacity: 0.6; transform: translate(var(--mid-x), var(--mid-y)) scale(1.2); }
  90%  { opacity: 0.3; }
  100% { opacity: 0; transform: translate(var(--end-x), var(--end-y)) scale(0.5); }
}

/* حركة خاصة بالمثلث */
@keyframes triangle-float {
  0%   { --start-x: -10%; --start-y: -20%; --mid-x: 20%;  --mid-y: 30%;  --end-x: 110%; --end-y: 120%; }
  100% { /* قيم ثابتة فقط ل shape-fade-move */ }
}

/* حركة خاصة بالمربع */
@keyframes square-drift {
  0%   { --start-x: 110%; --start-y: 10%;  --mid-x: 60%;  --mid-y: 70%;  --end-x: -20%; --end-y: 90%; }
  100% { }
}

/* حركة خاصة بالدائرة */
@keyframes circle-glide {
  0%   { --start-x: 30%;  --start-y: 110%; --mid-x: 50%;  --mid-y: 40%;  --end-x: 70%;  --end-y: -30%; }
  100% { }
}

