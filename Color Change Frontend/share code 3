// ### قبل: adminLogout
async function adminLogout() {
  await fetch(`${API_BASE_URL}/admin/logout`, { method: 'POST' });
  is_admin = false;
  updateUIForAdmin();
  alert('You have been logged out');
}

// ### بعد: adminLogout مع credentials
async function adminLogout() {
  await fetch(`${API_BASE_URL}/admin/logout`, {
    method: 'POST',
    credentials: 'include'
  });
  is_admin = false;
  updateUIForAdmin();
  alert('You have been logged out');
}
