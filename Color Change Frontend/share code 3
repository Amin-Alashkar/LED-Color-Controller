class Snake:
    def __init__(self, start_pos=0, length=10):
        self.position = start_pos
        self.length = length
        self.done = False

    def get_head(self):
        return self.position

    def get_tail(self):
        return self.position - self.length

    def get_body_indexes(self):
        return [self.position - i for i in range(self.length) if 0 <= self.position - i < NUM_LEDS]

    def move(self):
        self.position += 1
        if self.get_tail() >= NUM_LEDS:
            self.done = True


async def custom_color_wipe_loop(hex_color: str, delay: float = 0.05):
    """
    Super Ghost Mode 🗿:
    - خلفية ثابتة بنصف السطوع
    - أفاعي بطول 10، تمشي من البداية للنهاية
    - كل أفعى بسطوع كامل
    - بعد مرورها ترجع الخلفية كما كانت
    - فجوة عشوائية بين الأفاعي (3 إلى 10)
    """
    global stop_requested

    r_base = int(hex_color[1:3], 16)
    g_base = int(hex_color[3:5], 16)
    b_base = int(hex_color[5:7], 16)

    DIM_LEVEL = 100
    background_color = (
        (r_base * DIM_LEVEL) // 255,
        (g_base * DIM_LEVEL) // 255,
        (b_base * DIM_LEVEL) // 255
    )

    # إضاءة الخلفية الثابتة (البلاط)
    for i in range(NUM_LEDS):
        neo.set_led_color(i, *background_color)
    neo.update_strip()

    snakes = []
    gap_counter = 0
    current_gap = random.randint(3, 10)

    while not stop_requested:
        if gap_counter >= current_gap:
            snakes.append(Snake())
            gap_counter = 0
            current_gap = random.randint(3, 10)
        else:
            gap_counter += 1

        # تحديث الأفاعي
        for snake in snakes:
            # إعادة الذيل للخلفية
            tail = snake.get_tail()
            if 0 <= tail < NUM_LEDS:
                neo.set_led_color(tail, *background_color)

            # اضاءة جسم الأفعى بالكامل
            for i in snake.get_body_indexes():
                neo.set_led_color(i, r_base, g_base, b_base)

            # تحريك الأفعى
            snake.move()

        # حذف الأفاعي المنتهية
        snakes = [s for s in snakes if not s.done]

        neo.update_strip()
        await asyncio.sleep(delay)

    # عند الإيقاف، نظف الشريط
    neo.clear_strip()
    neo.update_strip()
