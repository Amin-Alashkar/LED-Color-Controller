    0% { text-shadow: 0 0 5px currentColor, 0 0 10px currentColor; }
    50% { text-shadow: 0 0 15px currentColor, 0 0 30px currentColor; }
    100% { text-shadow: 0 0 5px currentColor, 0 0 10px currentColor; }
}

@keyframes colorChange {
    0% { color: #ff0000; }
    25% { color: #ffff00; }
    50% { color: #00ff00; }
    75% { color: #00ffff; }
    100% { color: #ff0000; }
}

