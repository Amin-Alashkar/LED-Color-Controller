async def custom_color_wipe_loop(hex_color: str, delay: float = 0.02):
    """
    Custom Color Wipe (Ping Pong Mode):
    - LEDs light up one by one in chosen color, forward and backward endlessly.
    """
    global stop_requested
    r_base = int(hex_color[1:3], 16)
    g_base = int(hex_color[3:5], 16)
    b_base = int(hex_color[5:7], 16)

    while not stop_requested:
        # Forward wipe
        for i in range(NUM_LEDS):
            if stop_requested:
                neo.clear_strip()
                neo.update_strip()
                return
            neo.set_led_color(i, r_base, g_base, b_base)
            neo.update_strip()
            await asyncio.sleep(delay)

        # Optional pause at end
        await asyncio.sleep(0.2)

        # Backward wipe
        for i in reversed(range(NUM_LEDS)):
            if stop_requested:
                neo.clear_strip()
                neo.update_strip()
                return
            neo.set_led_color(i, 0, 0, 0)  # turn off one by one
            neo.update_strip()
            await asyncio.sleep(delay)

        # Optional pause at beginning
        await asyncio.sleep(0.2)

    neo.clear_strip()
    neo.update_strip()
