// â”€â”€â”€â”€ NEW: Ø¯Ø§Ù„Ø© â€œFadeÂ ColorsÂ (Custom)â€ â”€â”€â”€â”€
async function startCustomFadeAnimation() {
    // Ø¥Ø°Ø§ ÙƒØ§Ù† custom_fade ÙŠØ¹Ù…Ù„ Ø§Ù„Ø¢Ù†ØŒ Ù†ÙˆÙ‚ÙÙ‡
    if (isAnimationRunning && currentAnim === "custom_fade") {
        await stopAnimation();
        return;
    }
    // Ø¥Ø°Ø§ ÙƒØ§Ù† Ø£ÙŠ Ø£Ù†ÙŠÙ…ÙŠØ´Ù† Ø¢Ø®Ø± Ù‚ÙŠØ¯ Ø§Ù„ØªØ´ØºÙŠÙ„ØŒ Ù†ÙˆÙ‚ÙÙ‡ Ø£ÙˆÙ„Ø§Ù‹
    if (isAnimationRunning && currentAnim !== "custom_fade") {
        await stopAnimation();
    }
    // Ø§Ù„Ø¢Ù† Ù†Ø·Ù„Ø¨ Ù…Ù† Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„Ù„ÙˆÙ†:
    customFadeBtn.textContent = "ChooseÂ colorâ€¦";
    // Ù†ÙØªØ­ Ù†Ø§ÙØ°Ø© color picker Ø¨Ø±Ù…Ø¬ÙŠØ§Ù‹:
    colorPicker.click();
    // Ù†ÙØ¹Ø¯Ù‘ Ù…Ø³ØªÙ…Ø¹Ø§Ù‹ ÙˆØ­ÙŠØ¯Ø§Ù‹ Ù„Ø­Ø¯Ø« "input" Ø¹Ù„Ù‰ colorPicker
    const onColorChosen = async (e) => {
        // Ø£ÙˆÙ„Ø§Ù‹ Ù†Ù†Ø¸Ù (Ù†Ø²ÙŠÙ„) Ù‡Ø°Ø§ Ø§Ù„Ù…Ø³ØªÙ…Ø¹
        colorPicker.removeEventListener("input", onColorChosen);
        const chosenColor = e.target.value; // Ø§Ù„Ù„ÙˆÙ† Ø§Ù„Ø°ÙŠ Ø§Ø®ØªØ±ØªÙ‡
        // Ù†Ø¶Ø¹ UI Ø¹Ù„Ù‰ ÙˆØ¶Ø¹ Ø§Ù„ØªØ´ØºÙŠÙ„
        isAnimationRunning = true;
        currentAnim = "custom_fade";
        customFadeBtn.classList.add('active');
        customFadeBtn.textContent = 'FadeÂ ColorsÂ - Custom (Running)';
        cardElement.style.background = "#000000";
        colorDisplay.textContent = "FadeÂ ColorsÂ - Custom";
        // Ù†Ø±Ø³Ù„ Ø·Ù„Ø¨ Ø¨Ø¯Ø¡ Ø£Ù†ÙŠÙ…ÙŠØ´Ù† custom_fade Ù…Ø¹ Ø§Ù„Ù€ hex_color Ø§Ù„Ø°ÙŠ Ø§Ø®ØªØ±ØªÙ‡
        await sendRequest("/animate", {
            animation_type: "custom_fade",
            hex_color: chosenColor
        });
    };
    // Ù†Ø¶ÙŠÙ Ù…Ø³ØªÙ…Ø¹ input Ø¹Ù„Ù‰ colorPicker
    colorPicker.addEventListener("input", onColorChosen);
}

