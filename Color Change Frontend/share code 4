/* اجعل الـ about modal يغطي الشاشة ويظل فوق الكارد */
.about-modal {
  position: fixed;        /* <-- مهم */
  inset: 0;               /* top:0; right:0; bottom:0; left:0; */
  display: none;          /* يظهر فقط عند إضافة .show */
  align-items: center;
  justify-content: center;
  z-index: 10010;         /* أعلى من .card (الـ card لديك z-index:10) */
  pointer-events: auto;
  background: transparent; /* الخلفية صبح مسؤولية modal-backdrop */
}

/* الخلفية المعتمة - خلّها تظهر مع الكلاس .show */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(6px);
  display: none;       /* نظهرها برمجياً مع المودال */
  z-index: 10005;      /* أقل من about-modal لكن فوق الكارد */
}

/* عند الظهور */
.about-modal.show { display: flex; }
.modal-backdrop.show { display: block; }

/* المحتوى نفسه داخل المودال */
.about-content {
  width: 92%;
  max-width: 920px;
  max-height: calc(100vh - 80px); /* لا يتجاوز ارتفاع الشاشة */
  height: auto;
  border-radius: 14px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, rgba(18,20,30,0.98), rgba(12,14,22,0.95));
  box-shadow: 0 30px 80px rgba(6,8,16,0.6);
}

/* ضع الـ about-body قابل للتمرير داخلياً مع الحفاظ على padding */
.about-body {
  padding: 36px;                /* تحفظ الـ padding اللي بدك ياها */
  box-sizing: border-box;       /* padding محسوب داخل الأبعاد */
  color: #E6E6EA;
  font-size: 1.05rem;
  line-height: 1.6;
  display: block;               /* ليس flex-center حتى يمرر النص بشكل طبيعي */
  overflow: auto;               /* يسمح بالـ scroll داخل المودال إذا النص طويل */
  max-height: calc(100vh - 220px); /* يخلّي مساحة للرأس والتذييل */
}

/* لو تبي تترك محتوى الوسطي في المنتصف (اختياري) */
.about-body .center-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 120px;
}

/* غيّر ترتيب z-index للـ card لو لزم لتجنب التضارب */
.card {
  z-index: 10;
  position: relative;
}
