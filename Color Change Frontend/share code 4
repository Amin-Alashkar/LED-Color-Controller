// افتراض: زر فتح لديه id="openAboutBtn" و زر إغلاق داخل المودال لديه class="close-about"
const aboutModal = document.querySelector('.about-modal');
const modalBackdrop = document.querySelector('.modal-backdrop');
const openAboutBtn = document.getElementById('openAboutBtn');
const closeAboutBtns = document.querySelectorAll('.close-about, .about-modal .close-btn');

// فتح المودال
function openAbout() {
  modalBackdrop.classList.add('show');
  aboutModal.classList.add('show');
  // منع سكرول الخلفية إن أردت:
  document.documentElement.style.overflow = 'hidden';
}

// إغلاق المودال
function closeAbout() {
  aboutModal.classList.remove('show');
  modalBackdrop.classList.remove('show');
  document.documentElement.style.overflow = ''; // إعادة السلوك الطبيعي
}

// ربط الأحداث
if (openAboutBtn) openAboutBtn.addEventListener('click', openAbout);
closeAboutBtns.forEach(btn => btn.addEventListener('click', closeAbout));

// إغلاق عند الضغط خارج المحتوى (على الـ backdrop)
modalBackdrop.addEventListener('click', closeAbout);

// إغلاق بمفتاح ESC
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape' && aboutModal.classList.contains('show')) closeAbout();
});
